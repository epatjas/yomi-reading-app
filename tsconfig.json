{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "types": [
      "node",
      "jest",
      "expo-router/types"
    ],
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "images.d.ts"
  ]
}
